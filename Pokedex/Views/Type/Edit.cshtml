@model Business.ViewModels.Type.SaveTypeViewModel

<div class="row">
    <section class="bg-custom-semipurple rounded-3 text-white text-center p-3 my-5">
		<h3 class="display-8 fw-normal text-uppercase fw-bolder m-0"> Edición de Tipos</h3>
	</section>
    <div class="col-md-4 mx-auto">
        <form method="post" asp-controller="Type" asp-action="Edit" class="d-flex flex-column gap-3">
            <div class="form-group d-flex flex-column gap-2">
                <input asp-for="Name" class="form-control" placeholder="Tipo"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn bg-custom-darkpurple text-white w-100" />
            </div>
        </form>
    </div>
</div>

<div class="col-4 mx-auto d-flex justify-content-center mt-5">
    <a asp-action="Index" class="btn btn-danger text-white">Volver</a>
</div>